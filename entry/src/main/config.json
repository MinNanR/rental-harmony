{
  "app": {
    "bundleName": "site.minnan.rental",
    "vendor": "minnan",
    "version": {
      "code": 1000000,
      "name": "1.0.0"
    }
  },
  "deviceConfig": {
    "default": {
      "network": {
        "cleartextTraffic": true,
        "securityConfig": {
          "domainSettings": {
            "cleartextPermitted": true,
            "domains": [
              {
                "subdomains": true,
                "name": "minnan.site"
              }
            ]
          }
        }
      }
    }
  },
  "module": {
    "package": "site.minnan.rental",
    "name": ".MyApplication",
    "mainAbility": "site.minnan.rental.MainAbility",
    "deviceType": [
      "phone",
      "tablet"
    ],
    "distro": {
      "deliveryWithInstall": true,
      "moduleName": "entry",
      "moduleType": "entry",
      "installationFree": true
    },
    "abilities": [
      {
        "skills": [
          {
            "entities": [
              "entity.system.home"
            ],
            "actions": [
              "action.system.home"
            ]
          }
        ],
        "name": "site.minnan.rental.MainAbility",
        "icon": "$media:icon",
        "description": "$string:mainability_description",
        "label": "$string:entry_MainAbility",
        "type": "page",
        "launchType": "standard"
      },
      {
        "name": "site.minnan.rental.SecurityAbility",
        "icon": "$media:icon",
        "description": "$string:serviceability_description",
        "type": "service"
      },
      {
        "name": "site.minnan.rental.ValidatorAbility",
        "icon": "$media:icon",
        "description": "$string:validatorablity_description",
        "type": "service"
      }
    ],
    "js": [
      {
        "name": "default",
        "window": {
          "designWidth": 720,
          "autoDesignWidth": true
        },
        "pages": [
          "pages/room/room",
          "pages/login/login",
          "pages/index/index",
          "pages/tenant/tenant",
          "pages/utility/utility",
          "pages/info/info"
        ]
      }
    ],
    "reqPermissions": [
      {
        "name": "ohos.permission.GET_NETWORK_INFO"
      },
      {
        "name": "ohos.permission.SET_NETWORK_INFO"
      },
      {
        "name": "ohos.permission.INTERNET"
      }
    ]
  }
}